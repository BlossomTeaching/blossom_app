<div class="practice-container">
  <div class="scoreBar" id="scoreBar"></div>
  <div class="exercise">
    <div class="spanish">{{spanish}}</div>
    <div class="answer-box" id="answer" data-answer="{{answer}}">
        {{#each answer}}
        <button class="word" id="answerDisplay{{@index}}"></button>
        {{/each}}
    </div>
    <div class="block" id="block">
      {{#each buttons}}
        <button class="word" id="buttonWord{{@index}}">{{this}}</button>
      {{/each}}
    </div>
    <a href="/" id="exitButton">Exit</a>
  </div>
  <script src="/javascript/front.learn.js"></script>
</div>